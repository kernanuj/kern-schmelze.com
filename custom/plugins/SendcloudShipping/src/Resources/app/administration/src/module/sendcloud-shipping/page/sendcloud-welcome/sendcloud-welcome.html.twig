{% block sendcloud_welcome %}
    <sendcloud-container>
        <sw-loader v-if="isLoading"/>
        <sendcloud-content-window>
            <sendcloud-logo :sendcloud-logo-url="'/sendcloudshipping/administration/img/sendcloud.svg' | asset"/>
            <sendcloud-title :sendcloud-title="$tc('send-cloud.welcome.title')"/>
            <sendcloud-main-text :sendcloud-main-text="$tc('send-cloud.welcome.mainText')"/>
            <sendcloud-button :sendcloud-button-label="$tc('send-cloud.welcome.buttonLabel')" :on-click="startAuthProcess"/>
        </sendcloud-content-window>
    </sendcloud-container>
{% endblock %}