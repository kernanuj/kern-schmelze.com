{% sw_extends '@Storefront/storefront/base.html.twig' %}

{% block base_main_inner %}
    <div class="container-main">
        {% block page_content %}
            <div class="cms-page">
                <div class="cms-sections">
                    <div class="cms-section-default container">
                        <div class="cms-block">
                            <h1>{{ "molliePayments.messages.payment.error"|trans|striptags }}</h1>

                            <p>
                                {{ "molliePayments.messages.payment.failed"|trans|striptags }} {{ "molliePayments.messages.redirecting"|trans|striptags }}<a href="{{ redirectUrl }}">{{ redirectUrl }}</a>.
                            </p>
                        </div>
                    </div>
                </div>
            </div>
            <script> setTimeout(function() { window.location = '{{ redirectUrl }}'; }, 5000); </script>
        {% endblock %}
    </div>
{% endblock %}