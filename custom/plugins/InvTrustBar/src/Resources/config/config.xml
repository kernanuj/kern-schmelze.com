<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/shopware/platform/master/src/Core/System/SystemConfig/Schema/config.xsd">

    <card>
        <title>Status</title>
        <title lang="de-DE">Status</title>
        <title lang="es-ES">Estado</title>
        <title lang="fr-FR">Statut</title>
        <title lang="nl-NL">Status</title>

        <input-field type="bool">
            <name>status</name>
            <label>Active</label>
            <label lang="de-DE">Aktiv</label>
            <label lang="es-ES">Activado</label>
            <label lang="fr-FR">Actif</label>
            <label lang="nl-NL">Actief</label>
        </input-field>
    </card>

    <card>
        <title>Benefit 1</title>
        <title lang="de-DE">Vorteil 1</title>
        <title lang="es-ES">Ventaja 1</title>
        <title lang="fr-FR">Avantage 1</title>
        <title lang="nl-NL">Voordel 1</title>

        <input-field type="text">
            <name>benefit1</name>
            <label>Text</label>
            <label lang="de-DE">Text</label>
            <label lang="es-ES">Texto</label>
            <label lang="fr-FR">Texte</label>
            <label lang="nl-NL">Tekst</label>
            <defaultValue>Large selection</defaultValue>
        </input-field>

        <component name="sw-media-field">
            <name>icon1</name>
            <label>Icon (20 x 20px, .svg, .png, .jpg)</label>
            <label lang="de-DE">Icon (20 x 20px, .svg, .png, .jpg)</label>
            <label lang="es-ES">Icono (20 x 20px, .svg, .png, .jpg)</label>
            <label lang="fr-FR">Icône (20 x 20px, .svg, .png, .jpg)</label>
            <label lang="nl-NL">Pictogram (20 x 20px, .svg, .png, .jpg)</label>
            <helpText>Ideally this is a .svg-file with the measures 20 x 20px.</helpText>
            <helpText lang="de-DE">Idealerweise ist dies eine .svg-Datei mit den Maßen 20 x 20px.</helpText>
            <helpText lang="es-ES">Idealmente este es un archivo .svg con las dimensiones 20 x 20px.</helpText>
            <helpText lang="fr-FR">Idéalement, il s'agit d'un fichier .svg de dimensions 20 x 20px.</helpText>
            <helpText lang="nl-NL">Idealiter is het een .svg bestand met de afmetingen 20 x 20px.</helpText>
        </component>
    </card>

    <card>
        <title>Benefit 2</title>
        <title lang="de-DE">Vorteil 2</title>
        <title lang="es-ES">Ventaja 2</title>
        <title lang="fr-FR">Avantage 2</title>
        <title lang="nl-NL">Voordel 2</title>

        <input-field type="text">
            <name>benefit2</name>
            <label>Text</label>
            <label lang="de-DE">Text</label>
            <label lang="es-ES">Texto</label>
            <label lang="fr-FR">Texte</label>
            <label lang="nl-NL">Tekst</label>
            <defaultValue>Large selection</defaultValue>
        </input-field>

        <component name="sw-media-field">
            <name>icon2</name>
            <label>Icon (20 x 20px, .svg, .png, .jpg)</label>
            <label lang="de-DE">Icon (20 x 20px, .svg, .png, .jpg)</label>
            <label lang="es-ES">Icono (20 x 20px, .svg, .png, .jpg)</label>
            <label lang="fr-FR">Icône (20 x 20px, .svg, .png, .jpg)</label>
            <label lang="nl-NL">Pictogram (20 x 20px, .svg, .png, .jpg)</label>
            <helpText>Ideally this is a .svg-file with the measures 20 x 20px.</helpText>
            <helpText lang="de-DE">Idealerweise ist dies eine .svg-Datei mit den Maßen 20 x 20px.</helpText>
            <helpText lang="es-ES">Idealmente este es un archivo .svg con las dimensiones 20 x 20px.</helpText>
            <helpText lang="fr-FR">Idéalement, il s'agit d'un fichier .svg de dimensions 20 x 20px.</helpText>
            <helpText lang="nl-NL">Idealiter is het een .svg bestand met de afmetingen 20 x 20px.</helpText>
        </component>
    </card>

    <card>
        <title>Benefit 3</title>
        <title lang="de-DE">Vorteil 3</title>
        <title lang="es-ES">Ventaja 3</title>
        <title lang="fr-FR">Avantage 3</title>
        <title lang="nl-NL">Voordel 3</title>

        <input-field type="text">
            <name>benefit3</name>
            <label>Text</label>
            <label lang="de-DE">Text</label>
            <label lang="es-ES">Texto</label>
            <label lang="fr-FR">Texte</label>
            <label lang="nl-NL">Tekst</label>
            <defaultValue>Large selection</defaultValue>
        </input-field>

        <component name="sw-media-field">
            <name>icon3</name>
            <label>Icon</label>
            <label lang="de-DE">Icon (20 x 20px, .svg, .png, .jpg)</label>
            <label lang="es-ES">Icono (20 x 20px, .svg, .png, .jpg)</label>
            <label lang="fr-FR">Icône (20 x 20px, .svg, .png, .jpg)</label>
            <label lang="nl-NL">Pictogram (20 x 20px, .svg, .png, .jpg)</label>
            <helpText>Ideally this is a .svg-file with the measures 30 x 30px.</helpText>
            <helpText lang="de-DE">Idealerweise ist dies eine .svg-Datei mit den Maßen 30 x 30px.</helpText>
            <helpText lang="es-ES">Idealmente este es un archivo .svg con las dimensiones 30 x 30px.</helpText>
            <helpText lang="fr-FR">Idéalement, il s'agit d'un fichier .svg de dimensions 30 x 30px.</helpText>
            <helpText lang="nl-NL">Idealiter is het een .svg bestand met de afmetingen 30 x 30px.</helpText>
        </component>
    </card>

    <card>
        <title>Support and Link</title>
        <title lang="de-DE">Support und Link</title>
        <title lang="es-ES">Soporte y enlace</title>
        <title lang="fr-FR">Soutien et lien</title>
        <title lang="nl-NL">Ondersteuning en link</title>

        <input-field type="text">
            <name>hotline</name>
            <label>Phone number, e-mail address or text</label>
            <label lang="de-DE">Telefonnummer, E-Mail-Adresse oder Text</label>
            <label lang="es-ES">Número de teléfono, dirección de correo electrónico o texto</label>
            <label lang="fr-FR">Numéro de téléphone, adresse électronique ou texte</label>
            <label lang="nl-NL">Telefoonnummer, e-mailadres of tekst</label>
            <defaultValue>0180 - 000000 (Mon.-Fri., 9:00 - 5:00 pm)</defaultValue>
        </input-field>

        <input-field type="text">
            <name>hotlineLink</name>
            <label>Hotline link (optional)</label>
            <label lang="de-DE">Hotline link (optional)</label>
            <label lang="es-ES">Enlace Línea directa (opcional)</label>
            <label lang="fr-FR">Lien Ligne directe (optionnel)</label>
            <label lang="nl-NL">Directe lijnverbinding (optioneel)</label>
        </input-field>
    </card>

    <card>
        <title>Icon size (compile theme if changed)</title>
        <title lang="de-DE">Icon Größe (Theme kompilieren, wenn Werte geändert werden)</title>
        <title lang="es-ES">Tamaño del icono (compilar theme si se cambia los valores)</title>
        <title lang="fr-FR">Taille des icônes (compiler le thème si les valeurs sont modifiées)</title>
        <title lang="nl-NL">Icoongrootte (Thema compileren als waarden worden gewijzigd)</title>

        <input-field type="text">
            <name>iconWidth</name>
            <label>Icon width (incl. px)</label>
            <label lang="de-DE">Icon-Breite (inkl. px angeben)</label>
            <label lang="es-ES">Ancho del icono (especificar px incl.)</label>
            <label lang="fr-FR">Largeur de l'icône (préciser px incl.)</label>
            <label lang="nl-NL">Icoonbreedte (specificeer px incl.)</label>
            <defaultValue>20px</defaultValue>
        </input-field>

        <input-field type="text">
            <name>iconHeight</name>
            <label>Icon width (incl. px)</label>
            <label lang="de-DE">Icon-Höhe (inkl. px angeben)</label>
            <label lang="es-ES">Altura del icono (especificar px incl.)</label>
            <label lang="fr-FR">Hauteur de l'icône (préciser px incl.)</label>
            <label lang="nl-NL">Icoonhoogte (specificeer px incl.)</label>
            <defaultValue>20px</defaultValue>
        </input-field>
    </card>

    <card>
        <title>Font size (compile theme if changed)</title>
        <title lang="de-DE">Text-Größe (Theme kompilieren, wenn Werte geändert werden)</title>
        <title lang="es-ES">Tamaño del texto (compilar theme si se cambia los valores)</title>
        <title lang="fr-FR">Taille des icônes (compiler le thème si les valeurs sont modifiées)</title>
        <title lang="nl-NL">Icoongrootte (Thema compileren als waarden worden gewijzigd)</title>

        <input-field type="text">
            <name>fontSize</name>
            <label>Font size (incl. px)</label>
            <label lang="de-DE">Schriftgröße (inkl. px angeben)</label>
            <label lang="es-ES">Tamaño del texto (especificar px incl.)</label>
            <label lang="fr-FR">Taille du texte (préciser px incl.)</label>
            <label lang="nl-NL">Tekstgrootte (specificeer px incl.)</label>
            <defaultValue>12px</defaultValue>
        </input-field>

        <input-field type="text">
            <name>lineHeight</name>
            <label>Line height (incl. px)</label>
            <label lang="de-DE">Zeilenabstand (inkl. px angeben)</label>
            <label lang="es-ES">Espaciado de las líneas (especificar px incl.)</label>
            <label lang="fr-FR">Espacement des lignes (préciser px incl.)</label>
            <label lang="nl-NL">Lijnafstand (opgeven px incl.)</label>
            <defaultValue>19px</defaultValue>
        </input-field>
    </card>

    <card>
        <title>Colors (compile theme if changed)</title>
        <title lang="de-DE">Farben (Theme kompilieren, wenn Werte geändert werden)</title>
        <title lang="es-ES">Colores (compilar theme si se cambia los valores)</title>
        <title lang="fr-FR">Couleurs (compiler le thème si les valeurs sont modifiées)</title>
        <title lang="nl-NL">Kleuren (Thema compileren als waarden worden gewijzigd)</title>

        <component name="sw-colorpicker">
            <name>backgroundColor</name>
            <colorOutput>hex</colorOutput>
            <label>Background color</label>
            <label lang="de-DE">Hintergrundfarbe</label>
            <label lang="es-ES">Color de fondo</label>
            <label lang="fr-FR">Couleur de fond</label>
            <label lang="nl-NL">Achtergrondkleur</label>
            <defaultValue>#000000</defaultValue>
        </component>

        <component name="sw-colorpicker">
            <name>textColor</name>
            <colorOutput>hex</colorOutput>
            <label>Text color</label>
            <label lang="de-DE">Textfarbe</label>
            <label lang="es-ES">Color del texto</label>
            <label lang="fr-FR">Couleur du texte</label>
            <label lang="nl-NL">Tekstkleur</label>
            <defaultValue>#FFFFFF</defaultValue>
        </component>
    </card>
</config>
