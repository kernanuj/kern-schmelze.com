{% block swag_customized_products_option_type_template_numberfield %}
    <input type="number"
           class="form-control swag-customized-products-form-control number-field"
           id="swag-customized-products-option-id-{{ option.id }}"
           name="{{ constant('Swag\\CustomizedProducts\\Storefront\\Controller\\CustomizedProductsCartController::CUSTOMIZED_PRODUCTS_TEMPLATE_REQUEST_PARAMETER') }}[options][{{ option.id }}][value]"
           min="{{ props.minValue }}"
           max="{{ props.maxValue }}"
           step="{{ props.interval }}"
           value="{{ props.defaultValue }}"
           {{ option.required ? 'required' : '' }}>
{% endblock %}
